<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/settings_show_playing_sounds_switch"
            style="@style/SettingsEntryStyle"
            android:text="@string/settings_show_playing_sounds_switch_text" />

        <Switch
            android:id="@+id/settings_show_categories_of_sounds_switch"
            style="@style/SettingsEntryStyle"
            android:text="@string/settings_show_categories_of_sounds_switch_text" />
    </LinearLayout>
</ScrollView>